{
  "manifest_version": 3,
  "name": "Chrome Toolbox",
  "version": "0.3.0",
  "description": "Use Ctrl+Enter to send messages on ChatGPT, Gemini, and Google Chat.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://chat.google.com/*"
  ],
  "action": {
    "default_title": "Ctrl+Enter Sender",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "common.js",
        "chatgpt-content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "common.js",
        "vendor/jsmigemo.min.js",
        "gemini-content.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://chat.google.com/*"
      ],
      "js": [
        "common.js",
        "chat-content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "vendor/migemo-compact-dict"
      ],
      "matches": [
        "https://gemini.google.com/*"
      ]
    }
  ]
}
